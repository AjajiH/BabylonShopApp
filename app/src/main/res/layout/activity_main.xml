<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grey_sofa"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/babylonLogo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/babylon_transparent" />

    <TextView
        android:id="@+id/babylonSlogan"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/babylonLogo"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="182dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="99dp"
        android:fontFamily="sans-serif-light"
        android:text="Buy From Home For Home"
        android:textAlignment="center"
        android:textColor="@color/cardview_dark_background"
        android:textStyle="bold" />

    <Button
        android:id="@+id/HomeLoginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="49dp"
        android:background="#303032"
        android:text="Login"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/HomeCreateAccountBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#303032"
        android:text="Create Account"
        android:textColor="#FFFFFF" />
</RelativeLayout>