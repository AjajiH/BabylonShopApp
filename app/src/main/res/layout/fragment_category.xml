<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_shadow_start_color"
        android:orientation="vertical"
        android:padding="24dp"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/babylon_transparent" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#303032"
                android:gravity="center"
                android:text="CATEGORY"
                android:textAlignment="center"
                android:textColor="#fff" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bedrooms"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/categoryBedroom"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/category_bedrooms"
            android:text="Bedrooms"
            android:onClick="onClick"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Livingroom"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/categoryLivingroom"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/category_livingroom" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kitchen"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/categoryKitchen"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/category_kitchen" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bathroom"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/categoryBathroom"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/category_bathroom" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tables and Chairs"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/categoryTableChair"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/category_tables_chairs" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Outdoor"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/categoryOutdoor"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/category_outdoor" />

    </LinearLayout>
</ScrollView>