<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">

        <View
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="0dp"
            android:background="#303032" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/white" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_marginHorizontal="16dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableStart="@drawable/ic_baseline_search_black_24"
                android:drawableLeft="@drawable/ic_baseline_search_black_24"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Search"
                android:textColor="#000" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title"
            android:background="@color/cardview_shadow_start_color"
            android:orientation="vertical"
            android:padding="24dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/item1CardView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="2dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/item1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:padding="10dp"
                    android:src="@drawable/chair_2" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="30dp"
                    android:text="SAR 595"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:text="Home Chair"
                    android:textAlignment="center" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom | end"
                    android:background="@android:color/holo_red_light"
                    android:text="Add to Cart"
                    android:textAlignment="center" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/item2CardView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="2dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="10dp"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/item2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:padding="10dp"
                    android:src="@drawable/hamper_1" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="30dp"
                    android:text="SAR 149"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:text="Hamper"
                    android:textAlignment="center" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom | end"
                    android:background="@android:color/holo_red_light"
                    android:text="Add to Cart"
                    android:textAlignment="center" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/item3CardView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="2dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="10dp"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/item3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:padding="10dp"
                    android:src="@drawable/nightstand_4" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="30dp"
                    android:text="SAR 229"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:text="Nightstand"
                    android:textAlignment="center" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom | end"
                    android:background="@android:color/holo_red_light"
                    android:text="Add to Cart"
                    android:textAlignment="center" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/item4CardView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="2dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="10dp"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/item4"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:padding="10dp"
                    android:src="@drawable/sofa_1" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="30dp"
                    android:text="SAR 1889"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:text="Corner Sofa"
                    android:textAlignment="center" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom | end"
                    android:background="@android:color/holo_red_light"
                    android:text="Add to Cart"
                    android:textAlignment="center" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/item5CardView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="2dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="10dp"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/item5"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:padding="10dp"
                    android:src="@drawable/toweltable_4" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="30dp"
                    android:text="SAR 449"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:text="Towel Table"
                    android:textAlignment="center" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom | end"
                    android:background="@android:color/holo_red_light"
                    android:text="Add to Cart"
                    android:textAlignment="center" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>